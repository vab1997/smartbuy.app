    "@types/node": "20",
    "@types/react": "19",
    "@types/react-dom": "19",
    "drizzle-kit": "0.30.4",
    "eslint": "9",
    "eslint-config-next": "15.1.4",
    "postcss": "8",
    "prettier": "3.4.2",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "4.0.12",
    "ts-standard": "12.0.2",
    "tsx": "4.19.2",
    "typescript": "5"
  }
