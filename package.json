{
  "name": "smartbuy.app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "dev": "bun run db:up && next dev --turbopack",
    "db:reset": "docker compose down && docker volume rm smartbuy_postgres_data && echo 'Database reset complete!'",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:migration": "read -p 'Enter migration name: ' name && bun run drizzle-kit generate --name \"${name// /_}\"",
    "db:migrate": "node -r esbuild-register src/db/migrate.ts",
    "email:dev": "email dev --port 3001 --dir src/components/email-template",
    "vercel:build": "bun run db:migrate && bun run build"
  },
  "dependencies": {
    "@ai-sdk/google": "1.1.10",
    "@clerk/nextjs": "6.11.3",
    "@clerk/themes": "2.2.43",
    "@neondatabase/serverless": "0.10.4",
    "@radix-ui/react-alert-dialog": "1.1.6",
    "@radix-ui/react-avatar": "1.1.3",
    "@radix-ui/react-dialog": "1.1.6",
    "@radix-ui/react-dropdown-menu": "2.1.6",
    "@radix-ui/react-slot": "1.1.2",
    "@react-email/components": "0.0.41",
    "@types/jsdom": "21.1.7",
    "ai": "4.1.24",
    "cheerio": "1.0.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "dotenv": "16.4.7",
    "drizzle-orm": "0.39.3",
    "drizzle-seed": "0.3.1",
    "drizzle-zod": "0.7.0",
    "esbuild-register": "3.6.0",
    "install": "0.13.0",
    "jsdom": "26.0.0",
    "lucide-react": "0.471.0",
    "next": "15.4.0-canary.20",
    "next-safe-action": "7.10.4",
    "next-themes": "0.4.4",
    "nuqs": "2.4.0",
    "pg": "8.16.0",
    "playwright": "1.52.0",
    "playwright-aws-lambda": "0.11.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-email": "4.0.14",
    "resend": "4.5.1",
    "sonner": "2.0.1",
    "tailwind-merge": "3.0.2",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3",
